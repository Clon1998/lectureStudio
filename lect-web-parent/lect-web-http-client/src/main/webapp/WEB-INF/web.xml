<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
		 version="3.0">

	<display-name>Web-Service Client Application</display-name>

	<filter>
		<filter-name>IpFilter</filter-name>
		<filter-class>org.lecturestudio.web.client.servlet.IpFilter</filter-class>
	</filter>
	<filter>
		<filter-name>IndexFilter</filter-name>
		<filter-class>org.lecturestudio.web.client.servlet.IndexFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>IpFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>IndexFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>
