<?xml version="1.0" encoding="UTF-8"?>
<Panel layout="GridBagLayout" border="EmptyBorder(20, 20, 20, 20)">
	<TitledSeparator text="stream.settings.audio" name="extendedUI">
		<gridbagconstraints gridx="0" gridy="0" gridwidth="2" anchor="GridBagConstraints.WEST" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" insets="5,0,5,0" />
	</TitledSeparator>
	<Label text="stream.settings.audio.codec" name="extendedUI">
		<gridbagconstraints gridx="0" gridy="1" anchor="GridBagConstraints.WEST" insets="5,0,2,15" />
	</Label>
	<ComboBox id="streamAudioCodecCombo" name="extendedUI">
		<gridbagconstraints gridx="0" gridy="2" anchor="GridBagConstraints.WEST" insets="5,0,15,15" />
	</ComboBox>
	<Label text="stream.settings.audio.format" name="extendedUI">
		<gridbagconstraints gridx="1" gridy="1" anchor="GridBagConstraints.WEST" insets="5,0,2,0" />
	</Label>
	<ComboBox id="streamAudioFormatCombo" name="extendedUI">
		<gridbagconstraints gridx="1" gridy="2" anchor="GridBagConstraints.WEST" insets="5,0,15,0" />
		<renderer class="org.lecturestudio.swing.combobox.AudioFormatRenderer" />
	</ComboBox>
	<TitledSeparator text="stream.settings.camera" name="extendedUI">
		<gridbagconstraints gridx="0" gridy="3" gridwidth="2" anchor="GridBagConstraints.WEST" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" insets="5,0,5,0" />
	</TitledSeparator>
	<Label text="stream.settings.camera.bitrate" name="extendedUI">
		<gridbagconstraints gridx="0" gridy="4" anchor="GridBagConstraints.WEST" insets="5,0,2,0" />
	</Label>
	<TextField id="cameraBitrateTextField" name="extendedUI">
		<gridbagconstraints gridx="0" gridy="5" anchor="GridBagConstraints.WEST" insets="5,0,15,0" />
		<Filter class="org.lecturestudio.swing.filter.IntFilter" />
	</TextField>
	<TitledSeparator text="stream.settings.broadcast">
		<gridbagconstraints gridx="0" gridy="6" gridwidth="2" anchor="GridBagConstraints.WEST" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" insets="5,0,5,0" />
	</TitledSeparator>
	<Label text="stream.settings.broadcast.profiles" name="extendedUI">
		<gridbagconstraints gridx="0" gridy="7" anchor="GridBagConstraints.WEST" insets="5,0,2,0" />
	</Label>
	<Button id="addProfileButton" name="extendedUI" icon="add.svg, 20" text="button.new">
		<gridbagconstraints gridx="1" gridy="7" anchor="GridBagConstraints.EAST" insets="5,0,5,0" />
	</Button>
	<ScrollPane name="extendedUI">
		<gridbagconstraints gridx="0" gridy="8" gridwidth="2" weightx="1" weighty="0.6" fill="GridBagConstraints.BOTH" anchor="GridBagConstraints.WEST" insets="5,0,5,0" />
		<Table id="profileTable" autoCreateColumnsFromModel="false" fillsViewportHeight="true" rowHeight="25" selectionMode="ListSelectionModel.SINGLE_SELECTION">
			<TableColumn headerValue="stream.settings.broadcast.name" />
			<TableColumn headerValue="stream.settings.broadcast.address" />
			<TableColumn headerValue="stream.settings.broadcast.port" maxWidth="150" />
			<TableColumn headerValue="stream.settings.broadcast.port.tls" maxWidth="150" />
			<TableColumn maxWidth="35">
				<TableButtonRenderer icon="delete.svg, 20" toolTipText="stream.settings.broadcast.profile.delete" />
				<TableButtonEditor icon="delete.svg, 20" action="deleteAction" />
			</TableColumn>
		</Table>
	</ScrollPane>
	<box.vglue>
		<gridbagconstraints gridx="0" gridy="9" weighty="1.0" />
	</box.vglue>
	<HBox gap="5">
		<gridbagconstraints gridx="0" gridy="10" gridwidth="2" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" />
		<box.hglue />
		<Button id="resetButton" text="button.reset"/>
		<Button id="closeButton" text="button.close"/>
	</HBox>
</Panel>