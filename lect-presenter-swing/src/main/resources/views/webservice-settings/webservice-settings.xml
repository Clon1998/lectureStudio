<?xml version="1.0" encoding="UTF-8"?>
<Panel layout="GridBagLayout" border="EmptyBorder(20, 20, 20, 20)">
	<Label text="webservice.settings.lecture.title">
		<gridbagconstraints gridx="0" gridy="0" anchor="GridBagConstraints.WEST" insets="5,0,2,15" />
	</Label>
	<Label text="webservice.settings.lecture.title.short">
		<gridbagconstraints gridx="1" gridy="0" weightx="0.4" anchor="GridBagConstraints.WEST" insets="5,0,2,0" />
	</Label>
	<TextField id="lectureTitleTextField" columns="40">
		<gridbagconstraints gridx="0" gridy="1" fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST" insets="5,0,15,15" />
	</TextField>
	<TextField id="lectureTitleShortTextField" columns="20">
		<gridbagconstraints gridx="1" gridy="1" weightx="0.4" fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST" insets="5,0,15,0" />
	</TextField>
	<TitledSeparator name="extendedUI" text="webservice.settings.quiz">
		<gridbagconstraints gridx="0" gridy="2" gridwidth="2" anchor="GridBagConstraints.WEST" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" insets="5,0,5,0" />
	</TitledSeparator>
	<Label name="extendedUI" text="webservice.settings.regex.blocked">
		<gridbagconstraints gridx="0" gridy="3" anchor="GridBagConstraints.WEST" insets="5,0,5,0" />
	</Label>
	<Button id="addQuizRegexButton" name="extendedUI" icon="add.svg, 20" text="button.new">
		<gridbagconstraints gridx="1" gridy="3" anchor="GridBagConstraints.EAST" insets="5,0,5,0" />
	</Button>
	<ScrollPane name="extendedUI">
		<gridbagconstraints gridx="0" gridy="4" gridwidth="2" weightx="1" weighty="0.6" fill="GridBagConstraints.BOTH" anchor="GridBagConstraints.WEST" insets="5,0,5,0" />
		<Table id="quizRegexTable" autoCreateColumnsFromModel="false" fillsViewportHeight="true" rowHeight="25" selectionMode="ListSelectionModel.SINGLE_SELECTION">
			<TableColumn headerValue="webservice.settings.regex" />
			<TableColumn maxWidth="35">
				<TableButtonRenderer icon="delete.svg, 20" toolTipText="webservice.settings.regex.delete" />
				<TableButtonEditor icon="delete.svg, 20" action="deleteAction" />
			</TableColumn>
		</Table>
	</ScrollPane>
	<Label name="extendedUI" text="webservice.settings.display.ip.position">
		<gridbagconstraints gridx="0" gridy="5" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,5,0" />
	</Label>
	<Panel id="ipPosContainer" name="extendedUI" layout="GridBagLayout" border="EmptyBorder()">
		<gridbagconstraints gridx="0" gridy="6" gridwidth="2" weighty="0.4" anchor="GridBagConstraints.NORTHWEST" />
		<ToggleButton text="1" name="TOP_LEFT">
			<gridbagconstraints gridx="0" gridy="0" insets="0,0,5,5" />
		</ToggleButton>
		<ToggleButton text="2" name="TOP_CENTER">
			<gridbagconstraints gridx="1" gridy="0" insets="0,0,5,5" />
		</ToggleButton>
		<ToggleButton text="3" name="TOP_RIGHT">
			<gridbagconstraints gridx="2" gridy="0" insets="0,0,5,0" />
		</ToggleButton>
		<ToggleButton text="4" name="CENTER_LEFT">
			<gridbagconstraints gridx="0" gridy="1" insets="0,0,5,5" />
		</ToggleButton>
		<ToggleButton text="6" name="CENTER_RIGHT">
			<gridbagconstraints gridx="2" gridy="1" insets="0,0,5,0" />
		</ToggleButton>
		<ToggleButton text="7" name="BOTTOM_LEFT">
			<gridbagconstraints gridx="0" gridy="2" insets="0,0,0,5" />
		</ToggleButton>
		<ToggleButton text="8" name="BOTTOM_CENTER">
			<gridbagconstraints gridx="1" gridy="2" insets="0,0,0,5" />
		</ToggleButton>
		<ToggleButton text="9" name="BOTTOM_RIGHT">
			<gridbagconstraints gridx="2" gridy="2" insets="0,0,0,0" />
		</ToggleButton>
	</Panel>
	<box.vglue>
		<gridbagconstraints gridx="0" gridy="7" weighty="1.0" />
	</box.vglue>
	<HBox gap="5">
		<gridbagconstraints gridx="0" gridy="8" gridwidth="2" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" />
		<box.hglue />
		<Button id="resetButton" text="button.reset"/>
		<Button id="closeButton" text="button.close"/>
	</HBox>
</Panel>