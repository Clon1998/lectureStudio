<?xml version="1.0" encoding="UTF-8"?>
<Panel layout="GridBagLayout" border="EmptyBorder(20, 20, 20, 20)">
	<VBox id="contentContainer">
		<gridbagconstraints gridx="0" gridy="0" insets="0,0,2,0" anchor="GridBagConstraints.WEST" />

		<Label text="start.stream.choose.course" border="EmptyBorder(0, 0, 5, 0)" />
		<ComboBox id="courseCombo" name="extendedUI">
			<renderer class="org.lecturestudio.presenter.swing.combobox.CourseRenderer" />
		</ComboBox>
	</VBox>
	<Panel layout="GridBagLayout">
		<gridbagconstraints gridx="0" gridy="1" insets="10,0,5,0" anchor="GridBagConstraints.WEST" />

		<CameraPreviewPanel id="cameraView" preferredSize="200,150" maximumSize="200,150">
			<gridbagconstraints gridx="0" gridy="0" gridheight="1" weightx="1.0" weighty="1.0" fill="GridBagConstraints.BOTH" anchor="GridBagConstraints.NORTH" insets="0,0,0,0" />
		</CameraPreviewPanel>

		<VBox>
			<gridbagconstraints gridx="1" gridy="0" insets="0,10,0,10" anchor="GridBagConstraints.NORTH" />

			<CheckBox id="microphoneCheckBox" text="start.stream.microphone.enable" border="EmptyBorder(0, 0, 0, 0)" />
			<CheckBox id="cameraCheckBox" text="start.stream.camera.enable" border="EmptyBorder(5, 0, 0, 0)" />
			<CheckBox id="messengerCheckBox" text="start.stream.messenger.enable" border="EmptyBorder(5, 0, 0, 0)" />
		</VBox>
	</Panel>

	<Label id="errorLabel" visible="false">
		<gridbagconstraints gridx="0" gridy="0" insets="5,0,2,0" anchor="GridBagConstraints.WEST" />
	</Label>

	<HBox>
		<gridbagconstraints gridx="0" gridy="2" insets="20,0,0,0" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" />
		<box.hglue />
		<Button id="startButton" text="start.stream.start" />
		<box.hstrut width="5" />
		<Button id="closeButton" text="button.close" />
	</HBox>
</Panel>