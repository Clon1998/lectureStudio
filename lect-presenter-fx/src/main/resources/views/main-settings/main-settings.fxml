<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import org.lecturestudio.javafx.control.SvgIcon?>
<?import org.lecturestudio.presenter.javafx.view.FxCameraSettingsView?>
<?import org.lecturestudio.presenter.javafx.view.FxDisplaySettingsView?>
<?import org.lecturestudio.presenter.javafx.view.FxGeneralSettingsView?>
<?import org.lecturestudio.presenter.javafx.view.FxGridSettingsView?>
<?import org.lecturestudio.presenter.javafx.view.FxMicrophoneSettingsView?>
<?import org.lecturestudio.presenter.javafx.view.FxNetworkSettingsView?>
